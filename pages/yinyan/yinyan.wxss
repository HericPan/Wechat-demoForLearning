.whole{
  border: 5rpx solid #8c8c8c;
  margin: 15rpx;
  overflow: hidden;
  padding: 20rpx;
}

.whole .singleton{
  display: flex;
  flex-direction: column;
}

.whole .singleton .big{
  width:100%;
  margin-bottom: 10rpx;
}

.whole .title{
  font-size: 50rpx;
  font-weight: 600;
}

.whole .tips{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #8c8c8c;
  font-size: 30rpx;
  padding: 10rpx;
}
.whole .series{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.whole .series image{
  width: 100rpx;
  height: 100rpx;
  padding-right: 20rpx;
}